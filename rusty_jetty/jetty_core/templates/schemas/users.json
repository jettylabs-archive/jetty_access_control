{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": ".schemas/users.json",
    "type": "object",

    "properties": {
        "name": {
            "type": "string"
        },
        "groups": {
            "type": "array",
            "items": {
                "$ref": "config.json#/properties/groups"
            }
        },
        "identifiers": {
            "type": "object",
            "propertyNames": {
                "$ref": "config.json#/properties/connectors"
            },
            "additionalProperties": { "type": "string" }
        }
    },
    "required": ["name", "identifiers"]
}
