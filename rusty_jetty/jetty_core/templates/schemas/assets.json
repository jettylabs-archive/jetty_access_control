{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": ".schema/assets.json",
    "type": "object",
    "required": ["identifier"],
    "additionalProperties": false,
    "properties": {
        "identifier": {
            "$ref": "#/$defs/identifier"
        },
        "policies": {
            "type": "array",
            "items": { "$ref": "#/$defs/policy" }
        },
        "default policies": {
            "type": "array",
            "items": { "$ref": "#/$defs/default_policy" }
        }
    },

    "$defs": {
        "identifier": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": { "type": "string" },
                "id": { "type": "string" },
                "asset type": { "type": "string" },
                "connector": {
                    "$ref": "config.json#/properties/connectors"
                }
            },
            "required": ["name", "asset type", "connector"]
        },

        "policy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "privileges": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        { "type": "null" }
                    ]
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "config.json#/properties/groups"
                    }
                },
                "users": {
                    "type": "array",
                    "items": {
                        "$ref": "config.json#/properties/users"
                    }
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": { "type": "string" }
                }
            },
            "required": ["privileges"],
            "anyOf": [{ "required": ["groups"] }, { "required": ["users"] }]
        },

        "default_policy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "privileges": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        { "type": "null" }
                    ]
                },
                "path": {
                    "type": "string",
                    "pattern": "^(?:\\/)?(?:\\*)(?:\\/\\*)*?(?:\\/\\*\\*)?(?:\\/)?$"
                },
                "target type": {
                    "type": "string"
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "config.json#/properties/groups"
                    }
                },
                "users": {
                    "type": "array",
                    "items": {
                        "$ref": "config.json#/properties/users"
                    }
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": { "type": "string" }
                },
                "connector managed": {
                    "type": "boolean"
                }
            },
            "required": ["path", "target type", "privileges"],
            "anyOf": [{ "required": ["groups"] }, { "required": ["users"] }]
        }
    },
    "allOf": [
        { "$ref": "config.json#/properties/policy_matcher" },
        { "$ref": "config.json#/properties/default_policy_matcher" }
    ]
}
