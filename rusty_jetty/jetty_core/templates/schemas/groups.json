{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": ".schema/groups.json",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "member of": {
                "type": "array",
                "items": {
                    "$ref": "config.json#/properties/groups"
                }
            },
            "identifiers": {
                "type": "object",
                "propertyNames": {
                    "$ref": "config.json#/properties/connectors"
                },
                "additionalProperties": { "type": "string" }
            }
        },
        "required": ["name"]
    }
}
